new-challenge-button
.challenge
	.col-xs-3
	.col-xs-6.currentchallenge
		.col-xs-12
			span(ng-model='challenge') CHALLENGE: <br> <br>
		.col-xs-12.challengeinput(
				e-id='chalinput'
				tooltip="Create a challenge here to start!"
				tooltip-enable="true"
				tooltip-placement="left"
				editable-text="challengeinput.name"
				buttons="no"
				blur="submit"
				onshow="selectText()"
				e-ng-readonly="flag"
				ng-click="unlockchal();"
				ng-blur="saveChallenge(); lockchal()"
				ng-model='challenge'
				) {{ challengeinput.name || empty }}
		.col-xs-12
			i.fa.fa-unlock-alt.fa-3x(
				id='submitchal'
				ng-href="#"
				ng-if="challocked==false;"
				ng-click="saveChallenge(); lockchal(); flag=true;")
			i.fa.fa-lock.fa-3x(
				ng-if="challocked==true;"
				)
	.col-xs-3
challenge-search
challenge-posters
.aftermath(ng-show="challocked==true && movieslocked==true")
	.row
		.col-xs-1
			button.btn.btn-default(id='watched1' type='button' ng-click="showwatched1=true") Watched 
		.col-xs-5
			.input-group(ng-show='showwatched1 || postcomment1')
				input.form-control(
					type='text', 
					ng-model='postcomment1',
					placeholder='How was it?', 
					autofocus='',
					ng-blur="postcomment(3)",
					tooltip="Tell them how you felt about {{search1}}. Be Honest.",
					tooltip-trigger="focus",
					tooltip-placement="bottom")

		.col-xs-1
			button.btn.btn-default(id='watched1' type='button' ng-click="showwatched2=true") Watched 
		.col-xs-5			
			.input-group(ng-show='showwatched2 || postcomment2')
				input.form-control(
					type='text', 
					ng-model='postcomment2',
					placeholder='How was it?', 
					autofocus='',
					ng-blur="postcomment(4)"
					tooltip="Tell them how you felt about {{search2}}. Be Honest.",
					tooltip-trigger="focus",
					tooltip-placement="bottom")