extend layout
block extendhead

block header
	h1 
		a(ng-href="/" target="_self") Movie Battles
block challenge
	.col-xs-3
	.col-xs-6.currentchallenge
		.col-xs-12
			span(ng-model='challenge') CHALLENGE: <br> <br>
		.col-xs-12.challengeinput(
				contenteditable="true"
				id='chalinput'
				ng-model='challenge'
				placeholder='Choose Your Challenge'
				)) {{ challenge }}
		.col-xs-12
			button.btn.btn-default(id='submitchal' type='button' ng-click="saveChallenge();")
				span.glyphicon.glyphicon-lock
	.col-xs-3

block search
	.row
		.col-xs-6
			.input-group
				input.form-control(
					type='text', 
					ng-model='search1',
					ng-change='change()', 
					onclick='select()', 
					placeholder='Enter full movie name'
					)
				span.input-group-btn
					button#submit1.btn.btn-default(type='button' ng-click="saveMovie(1)")
						span.glyphicon.glyphicon-lock
		.col-xs-6
			.input-group
				span.input-group-btn
					button#submit2.btn.btn-default(type='button' ng-click="saveMovie(2)")
						span.glyphicon.glyphicon-lock
				input.form-control(type='text', 
					ng-model='search2', 
					ng-change='change()', 
					onclick='select()', 
					placeholder='Enter full movie name'
					)
		.col-xs-6
			.col-xs-12.commentinput(
				contenteditable="true", 
				ng-model='precomment1',
				placeholder='How do you feel going into this movie?', 
				autofocus='')
		.col-xs-6
			.col-xs-12.commentinput(
				contenteditable="true", 
				ng-model='precomment2',
				placeholder='How do you feel going into this movie?', 
				autofocus='')			
		.col-xs-6
			button.btn.btn-default(type='button' ng-click="postcomment(1)") Post Comment
		.col-xs-6
			button.btn.btn-default(type='button' ng-click="postcomment(2)") Post Comment



block results
	div(ng-if='!details' && '!details2')
		| Loading results...
	block 
		.poster.col-xs-6
			.image
				img(ng-src="{{ details1.Poster=='N/A' ? 'http://placehold.it/150x220&text=N/A' : 'http://imdb.wemakesites.net/api/1.0/img?url='+details1.Poster }}")
				.overlay
				.finished(ng-show="showwatched1  || postcomment1.length > 0")
					img(ng-src="/images/checkmark.png")
				.text
					p Director: {{ details1.Director }}
					p Year: {{ details1.Year }}
					p Actors: {{ details1.Actors }}
					p Plot: {{ details1.Plot }}
		.poster.col-xs-6
			.image
				img(ng-src="{{ details2.Poster=='N/A' ? 'http://placehold.it/150x220&text=N/A' : 'http://imdb.wemakesites.net/api/1.0/img?url='+details2.Poster }}")
				.overlay
				.finished(ng-show="showwatched2  || postcomment2.length > 0")
					img(ng-src="/images/checkmark.png")
				.text
					p Director: {{ details2.Director }}
					p Year: {{ details2.Year }}
					p Actors: {{ details2.Actors }}
					p Plot: {{ details2.Plot }}
block aftermath
	.row
		.col-xs-1
			button.btn.btn-default(id='watched1' type='button' ng-click="showwatched1=true") Watched 
		.col-xs-5
			.input-group(ng-show='showwatched1 || postcomment1.length > 0')
				input.form-control(
					type='text', 
					ng-model='postcomment1',
					placeholder='How was it?', 
					autofocus='')
				span.input-group-btn
					button.btn.btn-default(type='button' ng-click="postcomment(3)")
						span.glyphicon.glyphicon-lock
		.col-xs-1
			button.btn.btn-default(id='watched1' type='button' ng-click="showwatched2=true") Watched 
		.col-xs-5			
			.input-group(ng-show='showwatched2 || postcomment2.length > 0')
				input.form-control(
					type='text', 
					ng-model='postcomment2',
					placeholder='How was it?', 
					autofocus='')
				span.input-group-btn
					button.btn.btn-default(type='button' ng-click="postcomment(4)")
						span.glyphicon.glyphicon-lock

