
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand');
@import url(https://fonts.googleapis.com/css?family=Oswald);
/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = black
background-color = lightgrey

body
  padding 30px
  font-family 'Georgia'
  background none repeat scroll left top
  background-color background-color
  color #444  

header
  font-family: "Oswald";
  font-size: 1000px; text-transform: uppercase;
  color: #fff;
  padding 30px 30px 30px 10px
  font-size 25px
  text-align center/*
  min-width 400px
  max-width 900px
  position relative*/
  
  
  
  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background white
  border-bottom linear-gradient(bottom, 3% black, white);
  /*  background-color darkgrey
  border-bottom 30px solid darken(main-color, 30%)*/
  border-radius 0px
  box-shadow 0.75px 0.75px 0 blue, 1.5px 1.5px 1px red, 5px 5px 0 black
  text-shadow: -0.3px -0.3px 1px black, 0.1px 0.1px 0 blue, 0.25px 0.25px 0 red
  
.challenge
  padding 10px 0px 30px
  
.challenge .input 
  padding 10px
  border none
  border-bottom: solid 2px #c9c9c9
  transition: border 0.3s

  
.search
  padding 10px
  
  
.results
  padding 40px
  
.poster
  border-radius 3px
  height 500
  padding-top 20px

.image
  position relative
  border-radius 10px
  width 300
  height 450
  top 50%
  transform translateY(-50%)
  
.image .text
  position absolute
  top 0em
  padding 10px
  width 300px
  text-align left
  visibility hidden
  color white
  
.image .overlay
  position absolute
  top 0em
  background rgba(black,0.85)
  visibility hidden
  transition opacity 1s ease
  
  width 300px
  height 450px
  
.image:hover .overlay
  opacity 1
  visibility visible
  
.image:hover .text
  visibility visible
  

