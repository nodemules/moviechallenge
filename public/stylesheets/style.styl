
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = black
background-color = lightgrey

body
  padding 30px
  font-family 'Georgia'
  background none repeat scroll left top
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 30px 30px 30px 10px
  color #fff
  font-size 25px
  text-align center
  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color darkgrey
  border-bottom 3px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)
  
.challenge
  padding 10px 0px 30px
  
.challenge .input 
  padding 10px
  border none
  border-bottom: solid 2px #c9c9c9
  transition: border 0.3s

  
.search
  padding 10px
  
.results
  padding 40px
  
.poster
  border-radius 3px
  height 500
  padding-top 20px

.image
  position relative
  border-radius 10px
  width 300
  height 450
  top 50%
  transform translateY(-50%)
  
.image .text
  position absolute
  top 0em
  padding 10px
  width 300px
  text-align left
  visibility hidden
  color white
  
.image .overlay
  position absolute
  top 0em
  background rgba(black,0.85)
  visibility hidden
  transition opacity 1s ease
  
  width 300px
  height 450px
  
.image:hover .overlay
  opacity 1
  visibility visible
  
.image:hover .text
  visibility visible
  

