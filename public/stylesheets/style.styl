
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand');
@import url(https://fonts.googleapis.com/css?family=Oswald);
/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = black
dark-blue = rgb(18, 37, 47)
slightly-darker-blue = rgb(0, 31, 46)

body
  padding 30px
  font-family 'Georgia'
  background none repeat scroll left top
  background-color dark-blue
  color white 
  a
    text-decoration none
    color #afafaf
  a:hover
    color #bfbfbf

button
  font-family 'Oswald'
  background rgb(15, 34, 44)
  
nav
  font-family 'Hind'
  .navbar-brand
    font-size 24px

#newchal
  width 500
  border-radius 12px
  font-size 36px !important
  margin-bottom 4px
  box-shadow: 0 1px 0 #666, 0 5px 0 #444, 0 6px 6px rgba(0,0,0,0.6);
  :focus
    border-radius 12px

.newchalbtndiv
  width 500
  margin auto

#listwrap
  width 500
  margin auto
  border 3px solid white
  padding 16px
  border-radius 16px
  a
    text-decoration none

#vs
  /*
  color red*/
  text-align center

.lastlist
  counter-reset my-badass-counter
  display table
  
.lastlist nl
  position relative
  font bold 18px Oswald
  padding 4px 0px 12px 0px
  display table-row
  
.lastlist nl:before
  content counter(my-badass-counter)
  counter-increment my-badass-counter
  position absolute
  font bold 50px/1 Sans-Serif
  text-align left
  
.lastlist nc
  font-size 24px
  
.lastlist nc, .lastlist nm
  margin-left 50px
  display block
  

/*
messing with some stuff here, comment this out 
to uncenter the movie titles in lastlist
*/
.lastlist nm
  text-align center
  
.challenge h4
    text-align center
    font-family 'Oswald'
    font-size 36px !important
    
.header
  font-family: "Oswald"
  font-size 2.0em
  text-transform uppercase 
  color black
  padding 30px 30px 30px 10px
  font-size 25px
  text-align center
  padding-top 50px
  min-width 400px
  max-width 900px
  position relative
  background lightblue
  border-bottom linear-gradient(bottom, 3% black, white);
  border-radius 0px
  a
    text-decoration none
    
  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  /*  background-color darkgrey
  border-bottom 30px solid darken(main-color, 30%)*/


.maincontainer
  width 900px
  position absolute
  top 0
  /*  I commented this out to extend the maincontainer
      because it wasnt big enough for a large list (even
      removing 'height'). Ideally it should grow/shrink
      for our needs on the page.
  bottom 0
    */
  left 0
  right 0
  margin auto
  background dark-blue
  margin-top 50px



.challenge
  padding 30px 0px 50px
  
.challenge .input 
  padding 10px
  border none
  border-bottom: solid 2px #c9c9c9
  transition: border 0.3s

  
.search
  padding 10px
  
  
.results
  
  
.poster
  border-radius 3px
  height 500
  padding-top 20px
  background-size 100%
  

.image
  position relative
  border-radius 10px
  width 300
  height 450
  display: block;
  margin-left: auto;
  margin-right: auto;
  background-size 100%
  
.image .text
  position absolute
  top 0em
  padding 10px
  width 300px
  text-align left
  visibility hidden
  color white
  
.image .overlay
  position absolute
  top 0em
  background rgba(black,0.85)
  visibility hidden
  transition opacity 1s ease
  
  width 300px
  height 450px

.image .finished
  position absolute
  top 75px
  width 300px
  height auto
  text-align left
  background rgba(green, 0.30)
  background-size 100%
  color white
  
.image:hover .overlay
  opacity 1
  visibility visible
  
.image:hover .text
  visibility visible
  
.image .finished:hover .overlay
  visibility hidden

.currentchallenge
  text-align center
  padding 30px 30px 30px 30px/*
  background-color lightblue
  box-shadow: 10px 10px 40px #888888*/
  margin-bottom 15px
  margin-top 10px


/* Content Editable Stuff */

[contenteditable=true]:empty
  &:before
    content attr(placeholder)
    display block
[contenteditable=true]:focus
  border 1px solid rgb(86, 180, 239)
  box-shadow 0px 1px 3px rgba(0, 0, 0, 0.05) inset, 0px 0px 8px rgba(82, 168, 236, 0.6)
.challengeinput
  border 1px dashed #AAA
  padding 5px
  margin 5px
.commentinput
  border 1px solid #AAA
  padding 5px
  margin 5px

